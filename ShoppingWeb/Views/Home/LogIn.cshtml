@model ShoppingWeb.Models.User
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0">Logowanie</h3>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("LogIn", "Home", FormMethod.Post, new { @class = "form", @id = "formLogin" }))
                            {
                                <div class="form-group">
                                    <label for="uname1">Nazwa użytkownika</label>
                                    @Html.TextBoxFor(model => model.Login, new { @class = "form-control form-control-lg rounded-0", @id = "uname1" })
                                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Hasło</label>
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-lg rounded-0", @id = "pwd1" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                                <div>
                                    <label class="custom-control custom-checkbox">
                                        <span class="custom-control-indicator"></span>
                                        @Html.ActionLink("Rejestracja", "Register")
                                    </label>
                                </div>
                                    <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Zaloguj</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

